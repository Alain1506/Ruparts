<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".TasksStructure">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="640dp"
        android:layout_height="wrap_content"
        android:id="@+id/drag_handle_view">
    </com.google.android.material.bottomsheet.BottomSheetDragHandleView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/drag_handle_view"
        android:orientation="vertical">

            <TextView
                android:id="@+id/ts_status_high"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:drawableStart="@drawable/baseline_circle_24"
                android:text="Высокий" />

            <TextView
                android:id="@+id/ts_status_low"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:drawableStart="@drawable/baseline_circle_24_yellow"
                android:text="Низкий" />

    </LinearLayout>






</RelativeLayout>