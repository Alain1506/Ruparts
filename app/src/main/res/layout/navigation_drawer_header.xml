<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ndh_main"
    android:layout_width="match_parent"
    android:layout_height="92dp"

    android:backgroundTint="@color/white"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="29dp"
        android:background="@color/deep_purple"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginVertical="7dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="Петров АВ"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/imageView" />

        <Button
            android:id="@+id/logout_button"
            android:layout_width="86dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/light_purple"
            android:paddingHorizontal="5dp"
            android:text="ВЫЙТИ"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:onClick="logout"
            app:cornerRadius="3dp"
            app:icon="@drawable/baseline_exit_to_app_24"
            app:iconGravity="textStart"
            app:iconSize="20dp"
            app:iconTint="@color/black"
            app:layout_constraintStart_toEndOf="@id/textView2"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/bell_button"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:paddingHorizontal="-5dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/light_purple"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="3dp"
            app:icon="@drawable/baseline_notifications_24"
            app:iconGravity="textStart"
            app:iconSize="20dp"
            app:iconTint="@color/black"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/logout_button"
            app:strokeWidth="1dp" />
    </LinearLayout>


</RelativeLayout>