<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".TasksStructure">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/drag_handle_view_implementer_task_structure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/choose_implementer_task_structure"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/drag_handle_view_implementer_task_structure"
        android:gravity="center_vertical"
        android:paddingLeft="35dp"
        android:fontFamily="@font/roboto"
        android:text="Выберите исполнителя:"
        android:textSize="16dp"
        android:textStyle="bold">

    </TextView>

    <ListView
        android:id="@+id/ts_bottom_sheet_implementers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/choose_implementer_task_structure"
        android:fontFamily="@font/roboto"
        android:layout_marginStart="20dp" />


</RelativeLayout>